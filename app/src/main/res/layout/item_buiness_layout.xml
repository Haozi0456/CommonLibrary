<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/click_background_style"
              android:orientation="vertical"
              android:paddingBottom="@dimen/margin_8_dp"
              android:paddingLeft="@dimen/margin_16_dp"
              android:paddingRight="@dimen/margin_16_dp"
              android:paddingTop="@dimen/margin_8_dp">

    <TextView
        android:id="@+id/titleView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textColor="@color/black"
        android:textSize="@dimen/textSize_small"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/margin_5_dp"
        android:orientation="horizontal"
        >


            <ImageView
                android:id="@+id/newsImg"
                android:layout_width="@dimen/Size_80"
                android:layout_height="@dimen/Size_60"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/icon_preload"/>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/margin_5_dp"
            android:gravity="left"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/sourceText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:text="网易新闻"
                android:paddingTop="@dimen/margin_2_dp"
                android:maxLines="4"
                android:layout_alignParentTop="true"
                android:textSize="@dimen/textSize_x_small"/>

        </RelativeLayout>

    </LinearLayout>
</LinearLayout>