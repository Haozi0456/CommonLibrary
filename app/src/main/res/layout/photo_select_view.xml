<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="@dimen/margin_5_dp"
    >

    <!--<LinearLayout-->
    <!--android:id="@+id/pop_layout"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="0dp"-->
    <!--android:layout_weight="1"-->
    <!--android:orientation="vertical"-->
    <!--&gt;-->


    <!--</LinearLayout>-->
    <View
        android:id="@+id/pop_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <Button
            android:id="@+id/choose_by_camera"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_white_top_round_selector"
            android:padding="8dp"
            android:text="拍照"
            android:textColor="#0079F8"
            android:textSize="20dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#c0c2c1"/>

        <Button
            android:id="@+id/choose_by_local"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@drawable/bg_white_bottom_round_selector"
            android:padding="8dp"
            android:text="从相册选取"
            android:textColor="#0079F8"
            android:textSize="20dp"/>

        <Button
            android:id="@+id/dialog_cancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_white_selector"
            android:padding="8dp"
            android:text="取消"
            android:textColor="#0079F8"
            android:textSize="20dp"/>
    </LinearLayout>

</LinearLayout>
